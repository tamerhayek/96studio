extends layout

block link
    link(rel='stylesheet', href='/stylesheets/stories.css')

block content
    .hero
        .hero__background 
            img(src="/images/background.jpg", alt="Background")
        .hero__content.reveal
            p.intro-text.mt-2 Storie
            h1.big-text= categoria
            a.button(href='#presentazione') Scopri di pi√π

    .stories.mt-2#presentazione
        for position in size
            for story in stories
                if position === story.position
                    .story.mt-1
                        .story_image
                            a.image(href="/storie/text?titolo="+story.titolo)
                                img(src=story.copertina, alt=story.titolo)
                        .story_content 
                            h1.mid-text.tw= story.titolo 
                            p.small-text.tw= story.trama 
                            a.button(href="/storie/text?titolo="+story.titolo) Leggi